    style.
      * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      }
      @font-face {
      font-family: ostrich;
      font-style: normal;
      font-weight: 300;
      src: url(https://mpf-public-data.s3.ap-south-1.amazonaws.com/Images/MPFStatcFont/ostrich-regular.ttf);
      }
      @font-face {
      font-family: ostrichdashed;
      font-style: dashed;
      font-weight: 500;
      src: url(https://mpf-public-data.s3.ap-south-1.amazonaws.com/Images/MPFStatcFont/OstrichSans-Bold.otf);
      }
      html {
      font-size: 10px;
      }
      body {
      font-family: "Lato", sans-serif;
      background-color: gainsboro;
      font-weight: 400;
      }
      /* Utilites */
      .brand_font_color {
      color: #f2b42f;
      }
      .text-align-center {
      text-align: center;
      }
      .text-align-left {
      text-align: left;
      }
      .text-align-right {
      text-align: right;
      }
      .border-right {
      border-right: 1px solid gray;
      }
      .pdf_container {
      margin: 0 auto;
      height: 1123px;
      padding: 2rem;
      width: 794px ;
      background-color: white;
      /* margin-top: 20px;
      margin-bottom: 20px; */
      }
      .maxine-heading {
      width: 100%;
      /* background-color: red; */
      display: flex;
      padding: 3rem 2rem 0rem 2rem;
      }
      .maxine-heading__logo {
      height: 8rem;
      width: 8rem;
      flex: 1;
      margin-right: 0;
      }
      .maxine-heading__logo img{
      height: 100px;
      width: 100px;
      }
      .maxine-heading__profile {
      width:250px;
      flex: 1;
      margin-right: 0;
      min-height: 150px;
      position: relative;
      background-repeat: no-repeat;
      background-position: top;
      background-size: cover;
      margin-right: 2rem;
      }
      .maxine-heading__profile .logo-top {
      position: absolute;
      top: 0;
      left: 0;
      height: 45px;
      width: 45px;
      }
      .maxine-heading__heading-primary {
      display: flex;
      flex-direction: column;
      flex: 4;
      }
      .heading-primary--main {
      font-size: 3.5rem !important;
      display: block;
      font-weight: 900;
      }
      .heading-primary--sub {
      font-size: 1.3rem;
      color: #777;
      margin-top: 0.5rem;
      }
      .heading-primary--subHeader {
      font-size: 3.2rem !important;
      margin-top: 1rem;
      display: block;
      font-weight: 400;
      }
      .divider__line {
      margin-top: 3rem;
      min-height: 0.5rem;
      background-color: #f2b42f;
      margin-bottom: 3rem;
      }
      .products_grid {
      display: flex;
      flex-wrap: wrap;
      width: 100%;
      min-height: 10rem;
      }
      .products_grid_card {
      width: 250px;
      height: auto;
      padding: 1rem;
      }
      .products_grid_card__container {
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-bottom: 0.5rem;
      }
      .products_grid_card__container .image {
      width: 100%;
      height: 160px;
      background-repeat: no-repeat;
      background-size: contain;
      background-position: top center;
      margin-bottom: 1rem;
      }
      .products_grid_card__container .image_1 {
      width: 100%;
      height: 250px;
      background-repeat: no-repeat;
      background-size: contain;
      background-position: top center;
      margin-bottom: 1rem;
      }
      .products_grid_card__container .info h1 {
      text-align: center;
      font-weight: 900;
      font-size: 1.6rem;
      }
      .products_grid_card__container .info span {
      margin-top: 0.5rem;
      display: block;
      text-align: center;
      border: 1px solid #f2b42f;
      font-size: 1.4rem;
      padding: 0.8rem;
      }
      .products_grid_card__container .info p {
      font-size: 1.4rem;
      }
      .accessories h1 {
      font-size: 1.5rem !important;
      font-weight: bold !important;
      margin-top: 1rem;
      }
      .accessories h1::after {
      display: block;
      content: "";
      border-top: 0.3rem solid #f2b42f;
      width: 4rem;
      margin: 20px auto 0 auto;
      text-align: center;
      width: 100%;
      transform: translateY(-1rem);
      }
      .accessories p {
      font-size: 1.5rem !important;
      text-align: center;
      font-weight: 400;
      color: #777;
      }
      .footer {
      display: flex;
      justify-content: space-between;
      padding-left: 3rem;
      padding-right: 3rem;
      }
      .footer span {
      font-size: 1.5rem;
      font-weight: 700;
      }
      .footer > div {
      flex: 1;
      }
      /* -- Cover Page --*/
      .branad_logo {
      }
      .branad_logo .exclusive_lbl {
      display: block;
      font-size: 3rem;
      font-weight: 900;
      text-align: center;
      }
      .branad_logo .logo {
      text-align: center;
      margin-bottom: 2rem;
      margin-top: 2rem;
      }
      .branad_logo .logo img {
      width: 50%;
      }
      .cover_image {
      margin-top: 2.5rem;
      }
      .cover_image .top_headding {
      display: block;
      text-align: center;
      font-family: "ostrich", sans-serif;
      font-weight: 300;
      margin-top: 2rem;
      margin-bottom: 4rem;
      }
      .cover_image .top_headding .small-lbl {
      font-size: 4.5rem;
      margin-right: 1rem;
      color: #f2b42f;
      text-transform: uppercase;
      }
      .cover_image .top_headding .large-lbl {
      font-size: 4.5rem;
      font-family: "ostrichdashed", sans-serif;
      text-transform: uppercase;
      font-weight: 500;
      }
      .cover_image .image_section {
      display: flex;
      }
      .cover_image .image_section .left_heading_vertical {
      flex: 1;
      }
      .cover_image .image_section .person_image {
      flex: 5;
      height: 325px;
      background-color: #f2b42f;
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      position: relative;
      overflow: hidden;
      }
      .cover_image .image_section .person_image .bottom_lbl_text {
      position: absolute;
      width: 100%;
      padding: 1rem;
      background-color: #f2b42f;
      color: white;
      text-align: center;
      left: 0;
      bottom: 0;
      clip-path: polygon(13% 0, 100% 0, 100% 100%, 0% 100%);
      }
      .bottom_lbl_text .person-lbl {
      font-size: 3rem;
      display: block;
      }
      .cover_image .image_section .right_heading_vertical {
      flex: 1;
      writing-mode: vertical-lr;
      text-orientation: mixed;
      text-align: center;
      padding-left: 1rem;
      margin-left: 2rem;
      }
      .cover_image .image_section .right_heading_vertical .small-lbl {
      font-size: 5rem;
      margin-right: 1rem;
      color: #f2b42f;
      text-transform: uppercase;
      font-family: "ostrich", sans-serif;
      font-weight: 300;
      }
      .cover_image .image_section .right_heading_vertical .large-lbl {
      font-size: 4.5rem;
      font-family: "ostrichdashed", sans-serif;
      text-transform: uppercase;
      font-weight: 500;
      }
      .cover_image .image_section .left_heading_vertical {
      flex: 1;
      writing-mode: vertical-rl;
      text-orientation: mixed;
      text-align: center;
      padding-right: 1rem;
      margin-right: 2rem;
      }
      .cover_image .image_section .left_heading_vertical .small-lbl {
      font-size: 5rem;
      margin-right: 1rem;
      color: #f2b42f;
      text-transform: uppercase;
      font-family: "ostrich", sans-serif;
      font-weight: 300;
      }
      .cover_image .image_section .left_heading_vertical .large-lbl {
      font-size: 4.5rem;
      font-family: "ostrichdashed", sans-serif;
      text-transform: uppercase;
      font-weight: 500;
      }
      .color-pallette {
      display: block;
      text-align: center;
      }
      .color-pallette img {
      width: 75%;
      margin-bottom: 4rem;
      }
      .cover-footer {
      margin: 3.5rem auto;
      width: 75%;
      display: flex;
      justify-content: space-between;
      }
      .cover-footer .edition {
      font-size: 1.6rem;
      font-weight: 600;
      color: #777;
      }
      .lbl-for {
      font-family: "Pacifico", cursive;
      }
      /* Contact Us */
      .style-team-section {
      width: 100%;
      display: flex;
      margin-bottom: 3rem;
      }
      .style-team-section > div {
      flex: 1;
      }
      .style-team-section .image-card {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      }
      .style-team-section .image-card .image {
      height: 100px;
      width: 100px;
      border-radius: 100px;
      overflow: hidden;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: top center;
      }
      .style-team-section .image-card h1 {
      margin-top: 1rem;
      font-size: 2rem !important;
      font-weight: bold !important;
      margin-bottom: 0;
      }
      .style-team-section .image-card h1::after {
      display: block;
      content: "";
      border-top: 0.3rem solid #f2b42f;
      width: 4rem;
      margin: 20px auto 0 auto;
      text-align: center;
      width: 100%;
      transform: translateY(-1rem);
      }
      .style-team-section .image-card p {
      font-size: 1.5rem !important;
      color: #636e72 !important;
      text-align: center;
      }
      .team-section .about-mpf-section {
      min-height: 300px;
      width: 100%;
      background-color: #f2b42f !important;
      display: flex;
      flex-direction: column;
      /* justify-content: center; */
      align-items: center;
      padding-bottom: 30px;
      }
      .about-mpf-section h1 {
      font-size: 3rem !important;
      font-weight: bold !important;
      margin-top: 35px;
      }
      .about-mpf-section h1::after {
      display: block;
      content: "";
      border-top: 0.3rem solid #bb8103;
      width: 4rem;
      margin: 20px auto 0 auto;
      text-align: center;
      width: 100%;
      transform: translateY(-1rem);
      }
      .about-mpf-section p {
      font-size: 1.5rem !important;
      width: 65%;
      text-align: center;
      }
      .about-mpf-section .info-cards {
      margin-top: 3rem !important;
      min-width: 80%;
      justify-content: space-around;
      display: flex;
      }
      .about-mpf-section .info-cards .card {
      min-height: 150px;
      background-color: white !important;
      display: flex;
      width: 31%;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      }
      .about-mpf-section .info-cards .card h2 {
      font-size: 3rem !important;
      font-weight: bold !important;
      }
      .about-mpf-section .info-cards .card p {
      font-weight: bold;
      color: #f2b42f;
      font-size: 2rem;
      }
      .rating-section .rating-lbl {
      margin-top: 2rem;
      text-align: center;
      display: block;
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 1rem;
      }
      .social-ratings {
      align-items: center;
      justify-content: space-around;
      display: flex;
      width: 100%;
      }
      .social-ratings .review-item-card {
      display: flex;
      align-items: center;
      justify-content: center;
      }
      .social-ratings .review-item-card .review-image {
      margin-right: 10px;
      }
      .studio-address {
      display: flex;
      }
      .studio-address > div {
      flex: 1;
      padding-left: 2rem;
      }
      .studio-address h5,
      .social-links h5 {
      font-size: 1.8rem;
      font-weight: bold;
      }
      .studio-address h5::after,
      .social-links h5::after {
      display: block;
      content: "";
      border-top: 0.3rem solid #f2b42f;
      width: 4rem;
      margin: 20px 0 0 0;
      text-align: center;
      width: 30%;
      transform: translateY(-1rem);
      }
      .studio-address p {
      font-size: 16px;
      }
      /* Color Section */
      .color-section {
      display: flex;
      }
      .color-section .warm-colors {
      flex: 7;
      padding-left: 5rem;
      padding-top: 1.5rem;
      display: flex;
      flex-flow: wrap;
      }
      .colors {
      background-color: #fafafae5;
      padding: 1rem;
      }
      .color-section .avoid-colors {
      flex: 3;
      padding-left: 1rem;
      padding-top: 1.5rem;
      display: flex;
      flex-flow: wrap;
      }
      .warm-colors .color-box {
      width: 22%;
      height: 40px;
      margin-right: 5px;
      position: relative;
      }
      .avoid-colors .color-box {
      width: 43%;
      height: 40px;
      margin-right: 5px;
      margin-bottom: 5px;
      position: relative;
      }
      .warm-colors .color-box .color-name {
      width: 100%;
      text-align: center;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      }
      .shirt_Collars_section {
      display: block;
      margin-top: 2rem;
      border-left: 5px solid #f2b42f;
      padding-left: 20px;
      }
      .shirt_Collars_section h1 {
      font-size: 2rem;
      }

