      style.
        * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        }
        html {
        font-size: 10px;
        }
        body {
        font-family: "Lato", sans-serif;
        background-color: white;
        font-weight: 400;
        }
        /* Utilites */
        .brand_font_color {
        color: #f2b42f;
        }
        .text-align-center {
        text-align: center;
        }
        .text-align-left {
        text-align: left;
        }
        .text-align-right {
        text-align: right;
        }
        .border-right {
        border-right: 1px solid gray;
        }
        .pdf_container {
        margin: 0 auto;
        min-height: 80rem;
        padding: 3rem;
        width: 75rem;
        background-color: white;
        margin-top: 20px;
        margin-bottom: 20px;
        }
        .maxine-heading {
        width: 100%;
        /* background-color: red; */
        display: flex;
        }
        .maxine-heading__logo {
        height: 10rem;
        width: 10rem;
        flex: 1;
        margin-right: 0;
        }
        .maxine-heading__heading-primary {
        display: flex;
        flex-direction: column;
        flex: 4;
        }
        .heading-primary--main {
        font-size: 3.5rem !important;
        display: block;
        font-weight: 900;
        }
        .heading-primary--sub {
        font-size: 1.3rem;
        color: #777;
        margin-top: 0.5rem;
        }
        .divider__line {
        margin-top: 2.5rem;
        min-height: 0.5rem;
        background-color: #f2b42f;
        margin-bottom: 2.5rem;
        }
        .products_grid {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        min-height: 10rem;
        }
        .products_grid_card {
        width: 21.5rem;
        height: auto;
        padding: 1rem;
        }
        .products_grid_card__container {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        }
        .products_grid_card__container .image {
        width: 100%;
        height: 18.5rem;
        background-repeat: no-repeat;
        background-size: contain;
        background-position: top center;
        margin-bottom: 1rem;
        }
        .products_grid_card__container .info h1 {
        text-align: center;
        font-weight: 900;
        font-size: 1.6rem;
        }
        .products_grid_card__container .info span {
        margin-top: 0.5rem;
        display: block;
        text-align: center;
        border: 1px solid #f2b42f;
        font-size: 1.4rem;
        padding: 0.8rem;
        }
        .products_grid_card__container .info p {
        font-size: 1.4rem;
        }
        .accessories h1 {
        font-size: 2rem !important;
        font-weight: bold !important;
        }
        .accessories h1::after {
        display: block;
        content: "";
        border-top: 0.3rem solid #f2b42f;
        width: 4rem;
        margin: 20px auto 0 auto;
        text-align: center;
        width: 100%;
        transform: translateY(-1rem);
        }
        .accessories p {
        font-size: 1.5rem !important;
        text-align: center;
        font-weight: 400;
        color: #777;
        }
        .footer {
        display: flex;
        justify-content: space-between;
        }
        .footer span {
        font-size: 1.5rem;
        font-weight: 700;
        }
        .footer > div {
        flex: 1;
        }

